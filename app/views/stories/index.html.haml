.page-header
  = link_to new_story_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Story
  %h1 Listing stories

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Number
        %th Title
        %th Link
        %th Email
        %th{colspan: 3}

    %tbody
      - @stories.each.with_index do |story, index| # index has to be created for the whole row... feel pretty stupid -_-;; ugh...
        %tr
          %td
            = index+1 #(output of index number)
          %td
            %span.glyphicon.glyphicon-triangle-top
            = story.title
            = story.created_at # timestamp does gete created automatically. For database names check database.yml and schema.rb for table names
          %td
            = link_to(story.link, story.link, html_options = {target:'_blank'})
          %td
            = story.email
          %td
            = link_to story do
              %span.glyphicon.glyphicon-ok
          %td

            = link_to edit_story_path(story) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to story, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
